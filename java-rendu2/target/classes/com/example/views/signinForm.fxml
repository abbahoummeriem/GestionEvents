<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
   prefHeight="557.0" prefWidth="860.0" stylesheets="@../values/login.css"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controllers.loginControllerytb">
   <children>
      <!-- Conteneur gauche -->
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="430.0"
         style="-fx-background-color: #CBDCEB;" HBox.hgrow="ALWAYS">
         <children>
            <!-- Image de l'icÃ´ne -->
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@/com/example/images/lock.gif" />
               </image>
            </ImageView>
            <!-- Titre du formulaire -->
            <Label text="Bienvenue ! Connectez-vous" textFill="#133e87">
               <font>
                  <Font name="Tahoma bold" size="25.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </VBox>

      <VBox alignment="CENTER" prefHeight="557.0" prefWidth="486.0"
         style="-fx-background-color: #FFF;" HBox.hgrow="ALWAYS" styleClass="form-container">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true"
                     preserveRatio="true">
                     <image>
                        <Image url="@/com/example/images/Preloader.gif" />
                     </image>
                  </ImageView>
                  <Label text="Sign In" textFill="#133E87">
                     <font>
                        <Font name="Comic Sans MS" size="47.0" />
                     </font>
                  </Label>
               </children>
            </HBox>

            <HBox alignment="CENTER_LEFT" prefHeight="71.0" prefWidth="418.0" spacing="10.0"
      styleClass="field-container">
    <children>
    
        <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/com/example/images/email.png" />
            </image>
        </ImageView>

        <TextField fx:id="emailField" styleClass="text-field" promptText="Email"
                   prefHeight="45.0" prefWidth="305.0" />
    </children>
</HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="61.0" prefWidth="418.0" spacing="5.0"
               styleClass="field-container">
               <children>
               <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/com/example/images/password.png" />
            </image>
        </ImageView>
                  <PasswordField fx:id="motpasseField" styleClass="text-field"
                     promptText="Mot de passe" prefHeight="45.0" prefWidth="305.0" />
               </children>
            </HBox>

            <!-- Boutons de connexion et de fermeture -->
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="90.0" translateX="-33.0" styleClass="button-container">
               <children>
                  <VBox alignment="CENTER" layoutX="100.0" spacing="10.0">
    <Button text="Sign In" onAction="#btnLoginAction" prefHeight="35.0"
            prefWidth="250.0"
            style="-fx-background-color:#133E87 ; 
                   -fx-text-fill:rgb(255, 255, 255); 
                   -fx-border-color: #133E87; 
                   -fx-border-width: 2px; 
                   -fx-border-radius: 10px; 
                   -fx-background-radius: 10px;" />
                   
    <Button text="Sign Up" onAction="#switchToRegister"  prefHeight="45.0"
            prefWidth="250.0"
            style="-fx-background-color: transparent; 
                   -fx-text-fill: #133E87; 
                   -fx-border-color: #133E87; 
                   -fx-border-width: 2px; 
                   -fx-border-radius: 10px; 
                   -fx-background-radius: 10px;" />
</VBox>


               </children>
            </HBox>
         </children>
         <padding>
            <Insets left="40.0" />
         </padding>
      </VBox>
   </children>
</HBox>